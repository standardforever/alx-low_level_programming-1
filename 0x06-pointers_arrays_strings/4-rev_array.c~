#include "main.h"

/**
 * reverse_array - it reverse the content of an array
 * @a: is the array
 * @n: the number of element in the array
 * Return: nothing
 */
void reverse_array(int *a, int n)
{
	int i;

	for (i = n; i >= 0; i--)
	{
		if (i != 0)
		{
			_putchar(',');
			_putchar('\n');
		}
		_putchar(a[i]);
	}
}
