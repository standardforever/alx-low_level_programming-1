#include "main.h"
#include <stdio.h>

/**
 * cap_string - it capitalize all word of a string
 * @c: parameter of char
 * Return: the capitalize words
 */
char *cap_string(char *c)
{
	int i, j;
	char w[] = {44, 59,4, ' ', '\n', '\t', '.', '!', '?', '"', '(', ')', '{' \
		    , '}'};

	i = 0;
	j =  0;
	while (c[i] != '\0')
	{
		while (w[j] != '\0')
		{
			if (w[j] == c[i])
			{
				if (c[i + 1] >= 'a' && c[i + 1] <= 'z')
					c[i + 1] = c[i + 1] - 32;
				else
					c[i + 1] = c[i + 1];
			}
			j++;
		}
		i++;
	}
	return (c);
}
